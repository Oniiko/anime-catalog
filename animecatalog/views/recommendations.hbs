<div class="row">
	<div class="small-6 centered">
		<form method="get">
			<div> Username: <input name="user" value="{{ username }}"> </div>
			<div> Number of Results: <input name="n" value="{{ n }}"> </div>
			<div> Similarity Algorithm: <input name="sim_func" value="{{sim_func}}"> </div>
			<input type="submit" class="button">

			{{#if error}}
				<div class="callout warning"> {{error}}</div>
			{{/if}}
		</form>
	</div>
</div>
<div>
	Top User Matches:
	<ol>
		{{#each matches}}
			<li> {{ this.username }} ({{ this.score }}) </a> </li>
		{{/each}}
	</ol>
	<br>
	Recommended Anime List:
	<ol>
		{{#each recomms}}
			<li> {{ this.anime }} ({{ this.score }})  </a> </li>
		{{/each}}
	</ol>
</div>